<!--index.wxml-->
<view class="container">

	<!-- metro.jpg -->
	<view class="metro-picture">
		<view class="metro-avatar" style="background-image: url({{avatarUrl}})"></view>
	</view>

	<!-- 自助查询 -->
	<view class="uploader">
		<view class="uploader-text" bindtap="doUpload">
			<text>自助查询</text>
		</view>
		<view class="self-check-buttons">
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '客流情况'>客流情况</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '天气预报'>天气预报</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '路线规划'>路线规划</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '周边查询'>周边查询</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '票务票价'>票务票价</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '公共设施'>公共设施</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '规章制度'>规章制度</button>
			</view>
			<view class="button-view">
				<button class="button" hover-class='button-hover' bindtap = 'gotoPage' data-text = '首末班车'>首末班车</button>
			</view>
		</view>
	</view>


	<!-- 猜你想问 -->
	<view class="uploader">
		<view class="uploader-text" bindtap="doUpload">
			<text>猜你想问</text>
		</view>
		<view class="fast-answer-list">
			<block wx:for="{{problem_items}}">
				<!-- 每个cell -->
				<view class='problem-item' wx:key="{{item.id}}">

					<!-- 问题 -->
					<view class='ProblemView'>
						<text class='ProblemText'>{{item.problem_name}}</text>
					</view>

				</view>
			</block>
		</view>
	</view>


</view>