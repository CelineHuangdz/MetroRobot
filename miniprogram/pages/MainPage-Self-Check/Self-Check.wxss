/**index.wxss**/

page {
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.metro-avatar {
  width: 1000rpx;
  height: 200rpx;
  margin-top: 20rpx;
  /***border-radius: 50%;***/
  background-size: cover;
  background-color: white;
}

.uploader{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: auto;
  width: 95%;
  background: #176193d0;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  border-radius: 30rpx; 
}

.uploader-text{
  width: 100%;
  line-height: 52px;
  font-size: 50rpx;
  padding-left: 30rpx;
  color: #f2f2f2;
}

.self-check-buttons {
  border-top: 1px solid #e4e4e4;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.button-view{
  margin-top: 10px;
  margin-right: 30px;
  display:flex;
  text-align: center;
  align-items:center;
}

.button-image{
  width: 30px;
  height: 30px;
}

.button-text{
  font-size: 40rpx;
}

.button{
  color: #eeeeee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}

.button-hover{
  background-color: #72a9c2;
}

.fast-answer-list{
  border-top: 1px solid #e4e4e4;
  width: 100%;
}

.problem-item {
  width: 100%;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  height: auto;
}

.ProblemView {
  width: 100%;
  height: auto;
}

.ProblemText {
  color: #eeeeee;
  font-size: 40rpx;
  flex: 1;
}