/**index.wxss**/

page {
  background: #f1f1f1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.title-view{
  margin-top: 50rpx;
  margin-bottom: 35rpx;
}

.title-text{
  background-color: rgba(255, 255, 255, 0.200);
  color: #176193d0;
  font-size: 30px;
  font-weight: bold;
  border: 2px solid #176193d0;
  border-radius: 10rpx;
  padding: 15rpx;
}

.notice-view{
  width: 100%;
  display: flex;
  flex-direction: row;
  text-align: center;
  align-items:center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.notice-title{
  width: 15%;
  color:#fff;
  background:#176193d0;
  line-height:90rpx;
  font-weight: bold;
  font-size: 20px;
}

.scroll-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  box-sizing: border-box;
}

.scrolltxt{
  padding:0 20rpx;
  background:#176193d0;
}

.marquee_box {
  position:relative;
  color:#fff;
  height:90rpx;
  display:block;
  overflow:hidden;
} 

.marquee_text {
  white-space: nowrap;
  position:absolute;
  top:0;
  font-size:20px;
  height:90rpx;
  line-height:90rpx;
}

.uploader{
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  height: auto;
  width: 95%;
  background: #176193d0;
  border: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  border-radius: 30rpx; 
}

.uploader-text{
  width: 100%;
  line-height: 52px;
  font-size: 50rpx;
  font-weight: bold;
  padding-left: 30rpx;
  color: #f2f2f2;
}

.self-check-buttons {
  border-top: 1px solid #e4e4e4;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.button-view{
  margin-top: 10px;
  margin-right: 30px;
  display:flex;
  text-align: center;
  align-items:center;
}

.button-image{
  width: 30px;
  height: 30px;
}

.button-text{
  font-size: 40rpx;
}

.button{
  color: #eeeeee;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center; 
}

.button-hover{
  background-color: #72a9c2;
}

.fast-answer-list{
  border-top: 1px solid #e4e4e4;
  width: 100%;
}

.problem-item {
  width: 100%;
  padding-left: 30rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  height: auto;
}

.ProblemView {
  width: 100%;
  height: auto;
}

.ProblemText {
  color: #eeeeee;
  font-size: 40rpx;
  flex: 1;
}